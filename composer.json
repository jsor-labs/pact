{
    "name": "jsor/pact",
    "description": "A lightweight promise implementation for PHP",
    "license": "MIT",
    "authors": [
        {"name": "Jan Sorgalla", "email": "jsorgalla@gmail.com"}
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.2",
        "phpunit/phpunit": "~4.8.35 || ~5.7 || ~6.4"
    },
    "autoload": {
        "psr-4": {
            "Pact\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pact\\": [
                "tests/fixtures/",
                "tests/"
            ]
        }
    },
    "keywords": [
        "promise",
        "promises"
    ]
}
